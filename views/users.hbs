<div class="col-md-12">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<ol class="breadcrumb">
	  			<li><a href="{{app_context}}/">Home</a></li>
	 			<li class="active">Users</li>
			</ol>
			<h1>Users <span class="pull-right"><a href="{{app_context}}/users/new" class="btn btn-primary">New user</a></span></h1>
			<ul class="list-group">
				{{#each users}}
					<li class="list-group-item">
						<strong>User:</strong> {{this.users_name}} - ({{this.user_email}}) 
				  		<span class="pull-right">	
                            <strong>Role: </strong>
                            {{#is_an_admin this.is_admin}}
                                <span>Admin</span>
                            {{else}}
                                <span>User</span>
                            {{/is_an_admin}}
                            
                            {{#is_an_admin ../session.is_admin}}
                                <a href="{{app_context}}/user/edit/{{this._id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></a>
                                <a href="{{app_context}}/user/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete?')"><span class="glyphicon glyphicon-trash" aria-hidden="true"></a>
                            {{/is_an_admin}}
						</span>
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>